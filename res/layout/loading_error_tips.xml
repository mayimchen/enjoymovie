<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:visibility="gone"
    android:layout_height="wrap_content" >

    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/loading_error_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:background="@drawable/loading_error_tips_image" 
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:text="网络不给力啊" 
            android:textColor="@color/home_no_network_hint"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>
        <TextView android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:paddingLeft="5dp"
            android:text="请检查一下您的网络，重新加载吧" 
            android:textColor="@color/home_no_network_hint"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/loading_error_but"
            style="@style/common_button"
            android:layout_width="145dp"
            android:layout_gravity="center_horizontal"
            android:text="重新加载"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>