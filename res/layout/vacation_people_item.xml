<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/vacation_people_item"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/circle_corners_bg" >

        <TextView
            android:id="@+id/vacation_people_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="旅客1:" />

        <TextView
            android:id="@+id/vacation_people_item_name"
            android:layout_width="wrap_content"
            android:maxWidth="160dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="17dp"
            android:layout_toRightOf="@id/vacation_people_item_count"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="张三" /> 
        <TextView
            android:id="@+id/vacation_people_item_sex"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_toRightOf="@id/vacation_people_item_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="男" />
        
        <TextView
            android:id="@+id/vacation_people_item_icon"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/down_arrow" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/vacation_people_item_detail"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:background="@drawable/circle_corners_bg" 
        android:visibility="gone"
        >
    </RelativeLayout>
</LinearLayout>