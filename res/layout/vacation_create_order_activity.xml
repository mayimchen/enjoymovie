    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ScrollView
            android:id="@+id/vacation_order_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" >

            <LinearLayout
                android:id="@+id/outside_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingBottom="20dp" >

                <RelativeLayout
                    android:id="@+id/vacation_order_name_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/vacation_order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="订单详情" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/vacation_order_baseinfo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="基本信息:" />

                <RelativeLayout
                    android:id="@+id/vacation_order_base_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_corners_bg" >

                    <TextView
                        android:id="@+id/order_price_tv"
                        android:layout_width="90dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:text="订单总价:" />

                    <TextView
                        android:id="@+id/order_price"
                        android:layout_width="140dp"
                        android:layout_height="21dp"
                        android:layout_alignTop="@id/order_price_tv"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/order_price_tv"
                        android:text="计算中" />

                    <TextView
                        android:id="@+id/vacation_name_tv"
                        android:layout_width="90dp"
                        android:layout_height="21dp"
                        android:layout_below="@id/order_price_tv"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:text="度假产品:" />

                    <TextView
                        android:id="@+id/vacation_name"
                        android:layout_width="140dp"
                        android:layout_height="21dp"
                        android:layout_alignTop="@id/vacation_name_tv"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/vacation_name_tv"
                        android:singleLine="true"
                        android:text="一个好的度假产品" />

                    <TextView
                        android:id="@+id/vacation_startCity_tv"
                        android:layout_width="90dp"
                        android:layout_height="21dp"
                        android:layout_below="@id/vacation_name_tv"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:text="出发城市:" />

                    <TextView
                        android:id="@+id/vacation_startCity"
                        android:layout_width="140dp"
                        android:layout_height="21dp"
                        android:layout_alignTop="@+id/vacation_startCity_tv"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/vacation_startCity_tv"
                        android:text="北京" />

                    <TextView
                        android:id="@+id/vacation_startDate_tv"
                        android:layout_width="90dp"
                        android:layout_height="21dp"
                        android:layout_below="@id/vacation_startCity_tv"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:text="出发日期:" />

                    <TextView
                        android:id="@+id/vacation_startDate"
                        android:layout_width="140dp"
                        android:layout_height="21dp"
                        android:layout_alignTop="@id/vacation_startDate_tv"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/vacation_startDate_tv"
                        android:text="2013-02-32" />

