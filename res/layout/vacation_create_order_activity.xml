                <TextView
                    android:id="@+id/vacation_order_segment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="行程信息:" />

                <RelativeLayout
                    android:id="@+id/vacation_order_segment_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <!-- <TextView
                        android:id="@+id/order_segment_tv"
