<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/vacation_shake_head"
        layout="@layout/vacation_shake_head" />

    <LinearLayout
        android:id="@+id/filter_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/vacationfilter_head_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <!-- 不再提示加入 -->

            <LinearLayout
                android:id="@+id/vacationfilter_head_layout1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/vacationfilter_iv1"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/write1"
                     />
                    <!-- write_travel_icon -->
                <TextView
                    android:id="@+id/vacationfilter_headView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="填写旅行心愿"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/red"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vacationfilter_head_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                android:layout_below="@id/vacationfilter_head_layout1" >
                <ImageView
                    android:id="@+id/vacationfilter_iv1"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/find1"
                     />
                <TextView
                    android:id="@+id/vacationfilter_headView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兴趣标签筛选"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/red"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/vacationfilter_headView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vacationfilter_head_layout2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="更容易摇到自己喜欢的地方哦~"
                android:textSize="16dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vacationfilter_headView_show"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@drawable/icon_edit"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/vacation_filter_mainLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/vacationfilter_headView_show"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@drawable/warning_icon"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/go_auto_selectvacation_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="40dp" >

                <ImageView
                    android:id="@+id/shake_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shake" />

                <TextView
                    android:id="@+id/shake_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shake_iv"
                    android:layout_centerHorizontal="true"
                    android:text="摇一摇，去旅行" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>