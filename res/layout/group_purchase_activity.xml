<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/home_common_head"
        android:layout_alignParentTop="true"
        layout="@layout/head" />

    <ScrollView
        android:id="@+id/group_main_scroller"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/background_corners"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/my_messages"
                    android:layout_width="fill_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/more_acitivity_item_selector_top_corners"
                    android:clickable="true"
                    android:paddingLeft="13dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/my_msg"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/android_my_jd_messages"
                        android:padding="5dp"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/my_msg_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/my_msg"
                        android:paddingLeft="15dp"
                        android:text="城市/地区:" />

                    <TextView
                        android:id="@+id/my_unread_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="上海"
                        android:layout_toRightOf="@id/my_msg_text"
                         />

                    <ImageView
                        android:id="@+id/my_msg_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="12dp"
                        android:src="@drawable/android_list_idex" />
                </RelativeLayout>

                <View
                    android:id="@+id/my_divide_line_3"
                    style="@style/line1" >
                </View>

                <RelativeLayout
                    android:id="@id/menu_easy"
                    android:layout_width="fill_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/more_activity_item_selector_no_corners"
                    android:clickable="true"
                    android:paddingLeft="13dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/my_easybuy_image"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/main_menu_easy"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/my_easybuy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/my_easybuy_image"
                        android:paddingLeft="15dp"
                        android:text="价格:" />

                    <ImageView
                        android:id="@+id/my_easybuy_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="12dp"
                        android:src="@drawable/android_list_idex" />
                </RelativeLayout>

                <View
                    android:id="@+id/my_divide_line_6"
                    style="@style/line1" >
                </View>


                <RelativeLayout
                    android:id="@+id/my_discuss"
                    android:layout_width="fill_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/more_activity_item_selector_no_corners"
                    android:clickable="true"
                    android:paddingLeft="13dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/my_discuss_image"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_edit"
                        android:padding="5dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/my_discuss_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/my_discuss_image"
                        android:paddingLeft="15dp"
                        android:text="酒店名称：" />
                    <EditText 
                        android:id="@+id/hotel_name_editText"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/my_discuss_text"
                        android:layout_marginLeft="10dp"
                        />"
                    <ImageView
                        android:id="@+id/my_discuss_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="12dp"
                        android:src="@drawable/android_list_idex" />
                </RelativeLayout>

                <View
                    android:id="@+id/my_divide_line_7"
                    style="@style/line1" >
                </View>
            </LinearLayout>

            <Button
                android:id="@+id/search_hotel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                style="@style/common_button"
                android:text="搜索" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>